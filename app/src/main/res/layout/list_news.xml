<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardMaxElevation="2dp"
    card_view:cardElevation="1dp"
    android:layout_marginRight="10sp"
    android:layout_marginLeft="10sp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">
        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/news_thumb"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Gubernur Kendari"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/news_thumb" />

        <TextView
            android:id="@+id/news_tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8dp"
            android:text="20 Februari 2017"
            android:layout_below="@+id/news_title"
            android:layout_toEndOf="@+id/news_thumb" />

        <TextView
            android:id="@+id/news_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Found awesome girders at half the cost! Found awesome "
            android:textSize="12dp"
            android:layout_below="@+id/news_tanggal"
            android:layout_toEndOf="@+id/news_thumb" />
    </RelativeLayout>


</android.support.v7.widget.CardView>

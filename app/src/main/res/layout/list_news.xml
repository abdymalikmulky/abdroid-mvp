<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardMaxElevation="2dp"
    card_view:cardElevation="1dp"
    android:layout_marginBottom="@dimen/margin_one_by_one_list_news"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/list_thumb_width"
            android:layout_height="@dimen/list_thumb_height"
            android:paddingTop="@dimen/thumb_padding_list"
            android:paddingBottom="@dimen/thumb_padding_list"
            android:id="@+id/news_thumb"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <RelativeLayout
            android:id="@+id/news_content_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_box_list"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/news_thumb">
            <TextView
                android:id="@+id/news_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/news_title_textsize"
                android:maxLines="3"
                android:ellipsize="end"
                android:text="Mobil Hancur Tertimpa Pohon Tua di Perempatan Depan Bulog Kendari" />
            <TextView
                android:id="@+id/news_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Found awesome girders at half the cost! Found awesome "
                android:textSize="12dp"
                android:visibility="gone"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/news_title"
                android:layout_marginTop="@dimen/margin_date">
                <TextView
                    android:id="@+id/news_tanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/news_title_sub_textsize"
                    android:text="20 Februari 2017" />
                <TextView
                    android:id="@+id/delimiter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/news_title_sub_textsize"
                    android:text="@string/delimiter"
                    android:layout_marginRight="@dimen/margin_delimiter"
                    android:layout_marginLeft="@dimen/margin_delimiter"
                    />
                <TextView
                    android:id="@+id/news_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/news_title_sub_textsize"
                    android:textColor="@color/colorPrimary"
                    android:text="kendaripos.co.id" />
            </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>


</android.support.v7.widget.CardView>
